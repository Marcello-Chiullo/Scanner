<body>
    <div class="container">
        <h1>Scanner de Código de Barras/QR Code</h1>
        
        <div id="reader"></div>
        
        <div id="result">
            <p>Resultado do escaneamento aparecerá aqui</p>
        </div>
        
        <div id="upload-form" class="hidden">
            <h2>Upload de Material</h2>
            <form id="material-form">
                <div>
                    <label for="file-upload">Selecione o arquivo:</label>
                    <input type="file" id="file-upload" class="file-input">
                </div>
                <button type="submit" class="button">Enviar Arquivo</button>
            </form>
        </div>
        
        <div id="list-view" class="hidden list-container">
            <h2>Lista de Materiais</h2>
            <div id="material-list">
                <!-- Lista de materiais será carregada aqui -->
            </div>
        </div>
    </div>

    <script>
        // Configuração do scanner
        const html5QrCode = new Html5Qrcode("reader");
        const qrConfig = { fps: 10, qrbox: 250 };

        // Inicia o scanner
        html5QrCode.start(
            { facingMode: "environment" }, 
            qrConfig, 
            onScanSuccess
        );

        // Função chamada quando um código é escaneado com sucesso
        function onScanSuccess(decodedText, decodedResult) {
            // Para o scanner após encontrar um código
            html5QrCode.stop();
            
            // Mostra o resultado
            document.getElementById('result').innerHTML = `
                <p>Código escaneado: ${decodedText}</p>
                <button class="button" onclick="restartScanner()">Escanear Novamente</button>
            `;
            
            // Simula a abertura da lista de materiais
            loadMaterialList(decodedText);
            
            // Mostra o formulário de upload
            document.getElementById('upload-form').classList.remove('hidden');
        }

        // Função para reiniciar o scanner
        function restartScanner() {
            html5QrCode.start(
                { facingMode: "environment" }, 
                qrConfig, 
                onScanSuccess
            );
            
            document.getElementById('result').innerHTML = `
                <p>Resultado do escaneamento aparecerá aqui</p>
            `;
            
            document.getElementById('upload-form').classList.add('hidden');
            document.getElementById('list-view').classList.add('hidden');
        }

        // Função para carregar a lista de materiais
        function loadMaterialList(codeValue) {
            // Aqui você conectaria com sua API ou banco de dados
            // Para demonstração, vamos simular alguns dados
            const materialItems = [
                {id: 1, name: "Material 01", type: "PDF"},
                {id: 2, name: "Material 02", type: "Imagem"},
                {id: 3, name: "Material 03", type: "Documento"}
            ];
            
            let listHTML = "";
            materialItems.forEach(item => {
                listHTML += `
                    <div class="list-item">
                        <h3>${item.name}</h3>
                        <p>Tipo: ${item.type}</p>
                    </div>
                `;
            });
            
            document.getElementById('material-list').innerHTML = listHTML;
            document.getElementById('list-view').classList.remove('hidden');
        }

        // Configuração do formulário de upload
        document.getElementById('material-form').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const fileInput = document.getElementById('file-upload');
            const file = fileInput.files[0];
            
            if (file) {
                // Aqui você implementaria o upload do arquivo para seu servidor
                // Para demonstração, apenas mostramos uma mensagem de sucesso
                alert(`Arquivo "${file.name}" enviado com sucesso!`);
                
                // Limpa o campo de arquivo
                fileInput.value = "";
            } else {
                alert("Por favor, selecione um arquivo para upload!");
            }
        });
    </script>
